#!/usr/bin/make -f

include /usr/share/dpkg/default.mk
VERSION ?= $(DEB_VERSION_UPSTREAM)

%:
	dh  $@

override_dh_clean:
	debconf-updatepo
	dh_clean debian/postinst

override_dh_installdeb:
	cat debian/postinst.in | sed 's/#VERSION#/$(DEB_VERSION_UPSTREAM)/g' > debian/postinst
	dh_installdeb

override_dh_gencontrol:
	dh_gencontrol -- \
		-Vvirtualbox:Version=$(DEB_VERSION_UPSTREAM)-dfsg-0~ -Vvirtualbox:nextVersion=$(DEB_VERSION_UPSTREAM)-dfsg-z

tarball:
	mkdir virtualbox-ext-pack_$(VERSION)
	tar cJvf virtualbox-ext-pack_$(VERSION).orig.tar.xz virtualbox-ext-pack_$(VERSION)
	rm -rf virtualbox-ext-pack_$(VERSION)
	mv virtualbox-ext-pack_$(VERSION).orig.tar.xz ..
